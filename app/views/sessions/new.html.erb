<style>h2 {text-align: center;}</style>
<div class="ui container">
	<h2 class="ui inverted center aligned huge header">
		Welcome to MessageMe - <em>a complete Chat App</em>
	</h2>

	<div class="ui placeholder segment">
	  <div class="ui two column very relaxed stackable grid">
		<div class="column">
		  <div class="ui center aligned container">
  			<h3></h3> <!-- field for "Please log in..." -->
		  </div>	
		  <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
			<div class="field">
			  <%= f.label :username, "Username" %>
			  <div class="ui left icon input">
				<%= f.text_field :username, placeholder: "Username" %>
				<i class="orange user icon"></i>
			  </div>
			</div>
			<div class="field">
			  <%= f.label :password, "Password" %>
			  <div class="ui left icon input">
				<%= f.password_field :password, placeholder: "Password" %>
				<i class="orange lock icon"></i>
			  </div>
			</div>
			<%= f.button "Login", class: "ui orange submit button" %>
		  <% end %>
		</div>
		<div class="middle aligned column">
		  <div class="item">
			<%= link_to "Sign Up", signup_path, class: "ui big inverted orange button" %>
		  </div>
		</div>
	</div>
	  <div class="ui vertical divider">
		Or
	  </div>
</div>